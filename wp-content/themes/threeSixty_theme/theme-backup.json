{
  "$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "black",
          "color": "#ff1a1a",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#38b6f0",
          "name": "White"
        },
        {
          "slug": "primary",
          "color": "#111111",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#fefefe",
          "name": "Secondary"
        },
        {
          "slug": "tertiary",
          "color": "#4d1d67",
          "name": "Tertiary"
        },
        {
          "slug": "quaternary",
          "color": "#00838f",
          "name": "Quaternary"
        },
        {
          "slug": "quinary",
          "color": "#ff4b1f",
          "name": "Quinary"
        }
      ],
      "gradients": [
        {
          "slug": "quinary-to-secondary",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--quinary), var(--wp--preset--color--secondary))",
          "name": "Quinary to secondary"
        }
      ],
      "duotone": [
        {
          "colors": [
            "#cc1871",
            "#f9449e"
          ],
          "slug": "pink-and-light-pink",
          "name": "Pink and light pink"
        }
      ]
    },
    "typography": {
      "lineHeight": true,
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
          "slug": "system-fonts",
          "name": "System Fonts"
        },
        {
          "fontFamily": "Geneva, Tahoma, Verdana, sans-serif",
          "slug": "geneva-verdana"
        },
        {
          "fontFamily": "Cambria, Georgia, serif",
          "slug": "cambria-georgia"
        },
        {
          "fontFamily": "\"Zen Dots\", serif",
          "name": "Zen Dots",
          "slug": "zen-dots",
          "fontFace": [
            {
              "fontFamily": "Zen Dots",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:.\/theme-fonts\/ZenDots-Regular.woff2"
              ],
              "unicodeRange": "unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD"
            },
            {
              "fontFamily": "Zen Dots",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:.\/theme-fonts\/ZenDots-Regular.woff2"
              ],
              "unicodeRange": "unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD"
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "headline-6",
          "size": "1rem",
          "name": "Headline 6"
        },
        {
          "slug": "headline-5",
          "size": "1.125rem",
          "name": "Headline 5"
        },
        {
          "slug": "headline-4",
          "size": "1.125rem",
          "name": "Headline 4"
        },
        {
          "slug": "headline-3",
          "size": "1.25rem",
          "name": "Headline 3"
        },
        {
          "slug": "headline-2",
          "size": "1.5rem",
          "name": "Headline 2"
        },
        {
          "slug": "headline-1",
          "size": "2.5rem",
          "name": "Headline 1"
        },
        {
          "slug": "paragraph",
          "size": "2.5rem",
          "name": "Paragraph"
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ],
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      }
    },
    "layout": {
      "contentSize": "min(90%,1000px)",
      "wideSize": "min(90%,1200px)"
    },
    "custom": {
      "spacing": "14px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "blocks": {
      "core\/heading": {
        "color": {
          "palette": [
            {
              "slug": "tertiary",
              "color": "#1d1f35",
              "name": "Tertiary"
            }
          ]
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--primary)",
      "text": "var(--wp--preset--color--quinary)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--quinary)"
        }
      },
      "h3": {
        "color": {
          "text": "red"
        }
      }
    },
    "blocks": {
      "core\/heading": {
        "color": {
          "text": "red"
        },
        "elements": {
          "h1": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-1)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          },
          "h2": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-2)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          },
          "h3": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-3)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          },
          "h4": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-4)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          },
          "h5": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-5)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          },
          "h6": {
            "color": {
              "text": "blue"
            },
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-6)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          }
        }
      },
      "core\/post-excerpt": {
        "elements": {
          "link": {
            "color": {
              "background": "var(--wp--preset--color--pale-cyan-blue)"
            },
            "spacing": {
              "padding": {
                "top": "0.6rem",
                "right": "1rem",
                "bottom": "0.6rem",
                "left": "1rem"
              }
            }
          }
        }
      },
      "core\/search": {
        "color": {
          "background": "var(--wp--preset--color--quinary)"
        }
      }
    },
    "spacing": {
      "padding": {
        "top": "1rem",
        "right": "1rem",
        "bottom": "1rem",
        "left": "1rem"
      }
    },
    "typography": {
      "fontSize": "var(--wp--preset--font-size--headline-2)",
      "fontFamily": "var(--wp--preset--font-family--zen-dots)",
      "lineHeight": "1.7"
    }
  },
  "customTemplates": [
    {
      "name": "page-home",
      "title": "Page without title",
      "postTypes": [
        "page",
        "post"
      ]
    }
  ]
}
