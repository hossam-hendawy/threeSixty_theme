{
  "$schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        },
        {
          "slug": "warm-red",
          "color": "#F84E35",
          "name": "Warm Red"
        },
        {
          "slug": "off-white",
          "color": "#F3E9E7",
          "name": "Off White"
        },
        {
          "slug": "warm-black",
          "color": "#1A151C",
          "name": "Warm Black"
        },
        {
          "slug": "gray",
          "color": "#302A30",
          "name": "Gray"
        }
      ]
    },
    "typography": {
      "lineHeight": true
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": [
        "px",
        "em",
        "rem",
        "vh",
        "vw",
        "%"
      ],
      "spacingScale": {
        "operator": "*",
        "increment": 1.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      }
    },
    "layout": {
      "contentSize": "min(90%,1000px)",
      "wideSize": "min(90%,1200px)"
    },
    "custom": {
      "spacing": "14px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "blocks": {
      "core\/heading": {
        "color": {
          "text": "var(--wp--preset--color--black)"
        },
        "elements": {
          "h1": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-1)",
              "fontWeight": "260",
              "lineHeight": "clamp(5.6rem, 3.8857142857rem + 2.8571428571vw, 8rem)"
            }
          },
          "h2": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-2)",
              "fontWeight": "260",
              "lineHeight": "clamp(4rem, 2.8571428571rem + 1.9047619048vw, 5.6rem)"
            }
          },
          "h3": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-3)",
              "fontWeight": "260",
              "lineHeight": "clamp(3.2rem, 2.6285714286rem + 0.9523809524vw, 4rem)"
            }
          },
          "h4": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-4)",
              "fontWeight": "260",
              "lineHeight": "clamp(2.8rem, 2.5142857143rem + 0.4761904762vw, 3.2rem)"
            }
          },
          "h5": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-5)",
              "fontWeight": "260",
              "lineHeight": "1.7"
            }
          },
          "h6": {
            "typography": {
              "fontSize": "var(--wp--preset--font-size--headline-6)",
              "fontWeight": "400",
              "lineHeight": "1.7"
            }
          }
        }
      },
      "core\/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--paragraph)",
          "fontWeight": "400",
          "lineHeight": "1.5"
        }
      }
    }
  }
}
