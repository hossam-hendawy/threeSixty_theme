{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "mailster-workflow/trigger",
  "title": "Trigger",
  "category": "mailster-workflow-steps",
  "parent": [
    "mailster-workflow/triggers"
  ],
  "description": "Define how this workflow gets triggered.",
  "example": {},
  "supports": {
    "html": false,
    "className": false,
    "inserter": false,
    "customClassName": false,
    "lock": false
  },
  "attributes": {
    "id": {
      "type": "string"
    },
    "trigger": {
      "type": "string"
    },
    "disabled": {
      "type": "boolean"
    },
    "conditions": {
      "type": "string"
    },
    "repeat": {
      "type": "number",
      "default": 1
    },
    "pending": {
      "type": "boolean",
      "default": false
    },
    "lists": {
      "type": "array"
    },
    "forms": {
      "type": "array"
    },
    "tags": {
      "type": "array"
    },
    "links": {
      "type": "array"
    },
    "pages": {
      "type": "array"
    },
    "hook": {
      "type": "string"
    },
    "date": {
      "type": "string"
    },
    "field": {
      "type": "string"
    },
    "postCount": {
      "type": "number",
      "default": 1
    },
    "offset": {
      "type": "number",
      "default": 0
    },
    "query": {
      "type": "object",
      "default": {
        "postType": "post",
        "author": "",
        "exclude": [],
        "taxQuery": null
      }
    }
  },
  "textdomain": "mailster",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}